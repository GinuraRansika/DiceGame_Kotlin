<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/winner_popup_layout"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutWinnerPopup"
        android:layout_width="334dp"
        android:layout_height="346dp"
        android:padding="10dp"
        android:background="@drawable/rounded_black_popup_border"
        android:backgroundTint="@color/black"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewWinnerBannerPopup"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:contentDescription="@string/winner_image"
            android:scaleType="centerCrop"
            android:src="@drawable/winner_banner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageViewWinnerPopup"
            android:layout_width="231dp"
            android:layout_height="156dp"
            android:contentDescription="@string/winner_image"
            android:scaleType="centerCrop"
            android:src="@drawable/user_winner_image"
            app:layout_constraintBottom_toTopOf="@+id/textViewWinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewWinnerBannerPopup" />

        <TextView
            android:id="@+id/textViewWinner"
            android:layout_width="268dp"
            android:layout_height="57dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>