<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutGamePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/imageViewGamePageBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/background_image_for_the_game_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/you"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayoutForDice"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutGameWins" />

    <TextView
        android:id="@+id/textViewRobot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/robot"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayoutForDice"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUser" />

    <LinearLayout
        android:id="@+id/linearLayoutGameWins"
        android:layout_width="123dp"
        android:layout_height="82dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/total_wins_border"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewGameWinLabel"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:text="@string/total_wins"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textViewUserGameWinLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/human_wins_label"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/textViewUserGameWins"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textViewRobotGameWinLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/computer_wins_label"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/textViewRobotGameWins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutThrowAndScoreButton"
        android:layout_width="375dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutForDice">
        <Button
            android:id="@+id/btnThrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/button_throw" />

        <Button
            android:id="@+id/btnScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1"
            android:text="@string/button_score" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutForDice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutWinningScore">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/userDice1"
                android:layout_width="@dimen/dice_width"
                android:layout_height="@dimen/dice_height"
                android:layout_margin="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/die_face_6"
                android:contentDescription="@string/user_dice_1" />

            <ImageView
                android:id="@+id/userDice2"
                android:layout_width="@dimen/dice_width"
                android:layout_height="@dimen/dice_height"
                android:layout_margin="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/die_face_6"
                android:contentDescription="@string/user_dice_2" />

            <ImageView
                android:id="@+id/userDice3"
                android:layout_width="@dimen/dice_width"
                android:layout_height="@dimen/dice_height"
                android:layout_margin="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/die_face_6"
                android:contentDescription="@string/user_dice_3" />

            <ImageView
                android:id="@+id/userDice4"
                android:layout_width="@dimen/dice_width"
                android:layout_height="@dimen/dice_height"
                android:layout_margin="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/die_face_6"
                android:contentDescription="@string/user_dice_4" />

            <ImageView
                android:id="@+id/userDice5"
                android:layout_width="@dimen/dice_width"
                android:layout_height="@dimen/dice_height"
                android:layout_margin="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/die_face_6"
                android:contentDescription="@string/user_dice_5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/compDice1"
                android:layout_width="@dimen/dice_width"
                android:layout_height="@dimen/dice_height"
                android:layout_margin="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/die_face_6"
                android:contentDescription="@string/computer_dice_1" />

            <ImageView
                android:id="@+id/compDice2"
                android:layout_width="@dimen/dice_width"
                android:layout_height="@dimen/dice_height"
                android:layout_margin="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/die_face_6"
                android:contentDescription="@string/computer_dice_2" />

            <ImageView
                android:id="@+id/compDice3"
                android:layout_width="@dimen/dice_width"
                android:layout_height="@dimen/dice_height"
                android:layout_margin="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/die_face_6"
                android:contentDescription="@string/computer_dice_3" />

            <ImageView
                android:id="@+id/compDice4"
                android:layout_width="@dimen/dice_width"
                android:layout_height="@dimen/dice_height"
                android:layout_margin="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/die_face_6"
                android:contentDescription="@string/computer_dice_4" />

            <ImageView
                android:id="@+id/compDice5"
                android:layout_width="@dimen/dice_width"
                android:layout_height="@dimen/dice_height"
                android:layout_margin="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/die_face_6"
                android:contentDescription="@string/computer_dice_5" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutWinningScore"
        android:layout_width="170dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewFinalWinningScoreLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/winning_score"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewFinalWinningScore"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="116dp"
        android:layout_height="36dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutForDice"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutFullScore">

        <TextView
            android:id="@+id/textViewYourScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/roll_score"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewUserScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="116dp"
        android:layout_height="36dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutForDice"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textViewRobotScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:text="@string/roll_score"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewRobotScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFullScore"
        android:layout_width="137dp"
        android:layout_height="112dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/full_score_border"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewFullScoreLabel"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/full_score"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewUserFullScoreLabel"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:text="@string/you"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewUserFullScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRobotFullScoreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/robot"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRobotFullScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>